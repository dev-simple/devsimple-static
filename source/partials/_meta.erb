<div class="meta">
  <% if article.data.course %>
      <i class="fa fa-graduation-cap"></i> <span class="meta-course"><%= link_to_course(article.data.course) %></span>
      ∙
  <% end %>
  <% if article.data.category %>
      <i class="fa fa-graduation-cap"></i> <span class="meta-category"><%= link_to_category(article.data.category) %></span>
      ∙
  <% end %>
  <span class="meta-date"><%= article.date.strftime("%d.%m.%Y") %></span>
  <ul class="meta-tag-list">
      <% article.tags.each do |tag| %>
          <li class="meta-tag-item"><i class="fa fa-tag"></i> <%= link_to tag, tag_path(tag) %></li>
      <% end %>
  </ul>
</div>
