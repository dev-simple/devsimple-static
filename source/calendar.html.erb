---
pageable: true
per_page: 10
---
<section class="page--title">
    <h1>Статьи за
      <% case page_type
         when 'day' %>
        <span class="page--title-highlight">«<%= Date.new(year, month, day).strftime('%d.%m.%Y') %>»</span>
      <% when 'month' %>
        <span class="page--title-highlight">«<%= Date.new(year, month, 1).strftime('%m.%Y') %>»</span>
      <% when 'year' %>
        <span class="page--title-highlight">«<%= year %>»</span> год
      <% end %>
    </h1>
</section>

<%= partial "partials/posts_list", locals: { pagination_default_path: "", pagination_without_num: true } %>
