<% wrap_layout :layout do %>
    <article class="post">
        <section class="post--header">
            <h1><%= current_article.title %></h1>
            <%= partial "partials/meta", locals: { article: current_article } %>
        </section>
        <section class="post--body">
            <%= video(current_article.data.video) %>
            <%= yield %>
        </section>
    </article>
<% end %>
